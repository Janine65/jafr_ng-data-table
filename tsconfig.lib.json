{
  "compilerOptions": {
    "outDir": "dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "exclude": [
    "src/**/*.spec.ts",
    "**/*.stories.ts",
    "**/*.stories.js"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
